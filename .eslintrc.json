{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "strongloop",
    "rules": {
        "dot-notation": [2, {"allowPattern": "^[a-z]+(_[a-z]+)+$"}],
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "max-len": 0,
        "no-var": "error",
        "semi": [
            "error",
            "always"
        ],
        "comma-dangle": ["error", "never"],
        "brace-style": ["error", "stroustrup"]
    }
}
